{{#section 'title'}} Danh mục {{/section}} {{#section 'css'}}
<style>
    .page-number-button {
        margin: 0.5em;
        padding: 0.5em;
        border: 1px solid gray;
    }
    .active-pagebutton {
        background:gray;
        margin: 0.5em;
        padding: 0.5em;
        border: none; 
    }
</style>
{{/section}}
<p class="color-gray text-uppercase" style="font-size: 80%;">Nhà sản xuất / {{producerName}}</p>

{{#if noProducts}}
<h3 class="text-center">Không có sản phẩm nào trong danh mục</h3>
{{else}}
<div class="row text-center">
    {{#each products}}
    <div class="col-lg-3">
        <img style="width:85%" src="{{Image}}" />
        <h6 class="text-uppercase" style="color:gray;min-height:57px;">{{productName}}</h6>
        <small>Danh mục: {{categoryName}}</small><br />
        <small>Nhà sản xuất: {{producerName}}</small>
        <p>Giá:
            <span class="color-purple">{{Price}}đ</span>
        </p>
        <br>
        <a href="../../home/product?id={{ID}}" class="btn btn-sm btn-secondary">Chi tiết</a>
        <a href="#" class="btn btn-sm btn-secondary">Thêm vào giỏ</a>
    </div>
    {{/each}}
</div>
{{/if}}
<div class="text-center">
    <ul class="pagination" style="margin-left:45%;">
        <li class="disabled">
            <a href="#" aria-label="Previous">
                <span aria-hidden="true">«</span>
            </a>
        </li>
        {{#each page_number}} {{#if isCurrentPage}}
        <li class="active">
            <a class="active-pagebutton" href="javascript:;">{{value}}</a>
        </li>
        {{else}}
        <li>
            <a class="page-number-button" href="?page={{value}}">{{value}}</a>
        </li>
        {{/if}} {{/each}}
        <li>
            <a href="#" aria-label="Next">
                <span aria-hidden="true">»</span>
            </a>
        </li>
    </ul>
</div>